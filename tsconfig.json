{
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": false,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "suppressImplicitAnyIndexErrors": true,
    "listFiles": false
  },
  "exclude": [
    "node_modules"
  ]
}
